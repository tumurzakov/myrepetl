{
  "sources": {
    "source1": {
      "host": "mysql-source",
      "port": 3306,
      "user": "root",
      "password": "rootpassword",
      "database": "source_db"
    },
    "source2": {
      "host": "mysql-other",
      "port": 3306,
      "user": "root",
      "password": "rootpassword",
      "database": "source_db"
    }
  },
  "targets": {
    "target1": {
      "host": "mysql-target",
      "port": 3306,
      "user": "target_user",
      "password": "target_password",
      "database": "target_db"
    }
  },
  "replication": {
    "server_id": 100,
    "resume_stream": true,
    "blocking": false
  },
  "monitoring": {
    "enabled": true,
    "interval": 30,
    "log_level": "INFO"
  },
  "mapping":{
    "source1.users": {
      "init_query": "SELECT * FROM users WHERE status = 'active' AND id > 2",
      "target_table": "target1.users",
      "primary_key": "id",
      "column_mapping": {
        "id": {"column": "id", "primary_key": true},
        "name": {"column": "name", "transform": "transform.uppercase"},
        "email": {"column": "email"},
        "status": {"column": "status"},
        "source_id": {"column": "source_id", "value": "1"}
      },
      "filter": {
        "status": {"eq": "active"},
        "id": {"gt": 2}
      }
    },
    "source2.users": {
      "target_table": "target1.users",
      "primary_key": "id",
      "column_mapping": {
        "id": {"column": "id", "primary_key": true},
        "name": {"column": "name", "transform": "transform.uppercase"},
        "email": {"column": "email"},
        "status": {"column": "status"},
        "source_id": {"column": "source_id", "value": "2"}
      }
    }
  }
}

